<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="scannerFood.Views.ScannerPage">
    <ContentPage.Content>
        <StackLayout>
            <Image x:Name="PhotoImage" HeightRequest="224"/>
            <Label Text="Welcome to Xamarin.Forms!"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            <Button x:Name="btOpenCamera" Margin="0,10,0,0" Text="Learn more"
                        Command="{Binding OpenCamera}"
                        BackgroundColor="{StaticResource Primary}"
                        TextColor="White" Clicked="btnOpenCamera_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>