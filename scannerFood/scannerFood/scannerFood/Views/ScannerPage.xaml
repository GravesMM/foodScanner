<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="scannerFood.Views.ScannerPage"
             xmlns:vm="clr-namespace:scannerFood.ViewModels">

    <ContentPage.BindingContext>
        <vm:ScannerViewModel />
    </ContentPage.BindingContext>
    <ContentPage.Content>
        <StackLayout>
            <Image x:Name="PhotoImage" HeightRequest="224" />
            <Label Text="Welcome to Xamarin.Forms!"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            <Button x:Name="btOpenCamera" Margin="0,10,0,0" Text="Start Camera"
                        Command="{Binding OpenCamera}"
                        BackgroundColor="{StaticResource Primary}"
                        TextColor="White" Clicked="btnOpenCamera_Clicked"/>
            <Button x:Name="btScanImage" Margin="0,10,0,0" Text="Scan Image"
                        
                        BackgroundColor="{StaticResource Primary}"
                        TextColor="White" Clicked="btScanImage_Clicked"/>

            <Button Text="Pick Photo"
                Clicked="OnPickPhotoButtonClicked" />
            <Image x:Name="image" HeightRequest="224" />


        </StackLayout>
    </ContentPage.Content>
</ContentPage>